<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.ry.diary.demo2.guideview.OverlayView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/overlay_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:overlayColor="@color/eighty_percent_black"
        />
    
    <RelativeLayout
        android:id="@+id/overlay_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/overlay_content_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_overlay_arrow_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            />
        <TextView
            android:id="@+id/overlay_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/hello_world"
            android:layout_below="@+id/overlay_content_image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="24dp"
            />
    </RelativeLayout>
</FrameLayout>